<% if @error %>
  <%= @error %>
<% else %>
<h1>Congratulations! Here's your information:</h1>
<p>Full name: <%= current_user.name %></p>
<p>Email address: <%= current_user.email %></p>
<% end %>

<div class="url_container">
  <h1>OMG MyFAVURLs</h1>
  <table>
  <tr>
  <th>Description</th>
  <th>Shortened Url</th>
  <th>OMG D-Lete :(</th>
  </tr>
    <% current_user.urls.reverse.each do |url| %>
  <tr>
  <td><%= url.description %></td>
  <td><a href="/<%=url.shortened_url%>">http://<%= url.shortened_url %></a></td>
   <td>
    <form action="/delete_fav" method="post">
      <input type="hidden" name="sadurl_id"  value="<%= url.id %>">
      <input type="submit" value=":-(">
    </form>
  </tr>
  <% end %>
  </table>

</div>

